# Configuration TrackBee App v2

# Debug Settings - Activer logs détaillés
VITE_DEBUG=false
VITE_DEBUG_BLE=false
VITE_DEBUG_WIFI=false
VITE_DEBUG_PERFORMANCE=false
VITE_DEBUG_STATE=false
VITE_DEBUG_ORCHESTRATOR=false

# Environment
VITE_MODE=dev

# API Configuration
VITE_SERVER_ADDRESS_LOCAL=http://localhost:3000
VITE_SERVER_ADDRESS_WEB=https://api.trackbee.com

# BLE Configuration
VITE_BLE_SCAN_TIMEOUT=8000
VITE_BLE_CONNECT_TIMEOUT=5000
VITE_BLE_MTU_SIZE=247

# WiFi SoftAP Configuration
VITE_WIFI_CONNECT_TIMEOUT=15000
VITE_WIFI_TRANSFER_TIMEOUT=30000

# Performance Settings
VITE_QUERY_STALE_TIME=300000
VITE_QUERY_CACHE_TIME=900000
VITE_FILE_CHUNK_SIZE=8192

# Features Flags
VITE_FEATURE_OFFLINE_QUEUE=true
VITE_FEATURE_METRICS=true
VITE_FEATURE_DEBUG_PANEL=true

# Security
VITE_TOKEN_REFRESH_THRESHOLD=300000